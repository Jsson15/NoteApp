<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.kompletringsuppgift.TagInputController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextField fx:id="tagInputField" />

    <HBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Button fx:id="addTagButton" text="Add Tag" onAction="#addTagButtonClicked" />
        <Button fx:id="removeTagButton" text="Remove Tag" onAction="#removeTagButtonClicked" />
    </HBox>
</VBox>
